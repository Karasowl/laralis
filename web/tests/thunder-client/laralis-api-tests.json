        {
          "type": "custom-script",
          "custom": "// El usuario 1 no deberÃ­a ver datos de clÃ­nica 2\nconst response = JSON.parse(tc.response.body);\n\nif (tc.response.status === 200) {\n  // Si devuelve datos, verificar que estÃ¡n vacÃ­os o son de la clÃ­nica correcta\n  const patients = response.data || [];\n  \n  patients.forEach(patient => {\n    tc.test('No cross-clinic data access', () => {\n      tc.expect(patient.clinic_id).to.not.equal(tc.getVar('clinic2Id'));\n    });\n  });\n} else {\n  tc.test('Proper access control', () => {\n    tc.expect(tc.response.status).to.be.oneOf([400, 403, 404]);\n  });\n}"
        }
